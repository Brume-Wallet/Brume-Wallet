{
  "manifest_version": 2,
  "name": "Brume Wallet",
  "description": "The private wallet",
  "version": "VERSION",
  "browser_action": {},
  "icons": {
    "512": "favicon.png"
  },
  "permissions": [
    "storage"
  ],
  "background": {
    "type": "module",
    "scripts": ["service_worker.js"]
  },
  "content_scripts": [
    {
      "matches": [
        "http://*/*",
        "https://*/*"
      ],
      "js": [
        "content_script.js"
      ],
      "run_at": "document_start",
      "all_frames": true
    }
  ]
}
