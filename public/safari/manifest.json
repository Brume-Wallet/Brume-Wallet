{
  "manifest_version": 3,
  "name": "Brume Wallet",
  "description": "The private wallet",
  "version": "VERSION",
  "action": {
    "default_title": "Brume Wallet",
    "default_popup": "action.html"
  },
  "icons": {
    "512": "favicon.png"
  },
  "permissions": [
    "storage"
  ],
  "background": {
    "type": "module",
    "service_worker": "service_worker.js"
  },
  "content_scripts": [
    {
      "matches": [
        "http://*/*",
        "https://*/*"
      ],
      "js": [
        "content_script.js"
      ],
      "run_at": "document_start",
      "all_frames": true
    }
  ],
  "content_security_policy": {
    "extension_pages": "default-src 'self'; script-src 'self' 'wasm-unsafe-eval'; img-src 'self' data: blob:; connect-src 'self' data: https://raw.githubusercontent.com wss://snowflake.torproject.net;"
  }
}