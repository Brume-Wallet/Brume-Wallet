{
  "manifest_version": 3,
  "name": "Brume Wallet",
  "description": "The private wallet",
  "version": "VERSION",
  "action": {},
  "icons": {
    "512": "favicon.png"
  },
  "permissions": [
    "storage",
    "offscreen"
  ],
  "content_security_policy": {
    "extension_pages": "default-src 'self'; base-uri 'self'; object-src 'none'; script-src 'self' 'wasm-unsafe-eval'; img-src 'self' data: blob:; connect-src 'self' data: https://raw.githubusercontent.com wss://snowflake.torproject.net;"
  },
  "background": {
    "type": "module",
    "service_worker": "service_worker.js"
  },
  "content_scripts": [
    {
      "matches": [
        "http://*/*",
        "https://*/*"
      ],
      "js": [
        "content_script.js"
      ],
      "run_at": "document_start",
      "all_frames": true
    },
    {
      "matches": [
        "http://*/*",
        "https://*/*"
      ],
      "js": [
        "injected_script.js"
      ],
      "run_at": "document_start",
      "all_frames": true,
      "world": "MAIN"
    }
  ]
}
