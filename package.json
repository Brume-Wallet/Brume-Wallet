{
  "name": "@brumewallet/wallet",
  "version": "0.3.25",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "npm run build:!before && npm run build:!website && npm run build:!chrome && npm run build:!safari && npm run build:!firefox && npm run build:!after",
    "build:!before": "rimraf ./dist && next build && mv ./out/_next ./out/next && node ./scripts/postbuild.mjs && mkdir ./dist",
    "build:!website": "mkdir ./dist/website && cp -R ./out/* ./dist/website && cd ./dist/website && rimraf ./firefox ./chrome ./safari",
    "build:!chrome": "mkdir ./dist/chrome && cp -R ./out/* ./dist/chrome && cd ./dist/chrome && mv ./chrome/* . && rimraf ./firefox ./chrome ./safari",
    "build:!firefox": "mkdir ./dist/firefox && cp -R ./out/* ./dist/firefox && cd ./dist/firefox && mv ./firefox/* . && rimraf ./firefox ./chrome ./safari",
    "build:!safari": "mkdir ./dist/safari && cp -R ./out/* ./dist/safari && cd ./dist/safari && mv ./safari/* . && rimraf ./firefox ./chrome ./safari",
    "build:!after": "node ./scripts/postbuild2.mjs && rimraf ./out",
    "build:website": "npm run build:!before && npm run build:!website && npm run build:!after",
    "build:vercel": "npm run build:website && cp -R ./dist/website ./out",
    "zip": "npm run zip:website && npm run zip:chrome && npm run zip:firefox && npm run zip:safari",
    "zip:website": "cd ./dist/website && zip -r -X ../website.zip .",
    "zip:chrome": "cd ./dist/chrome && zip -r -X ../chrome.zip .",
    "zip:firefox": "cd ./dist/firefox && zip -r -X ../firefox.zip .",
    "zip:safari": "cd ./dist/safari && zip -r ../safari.zip .",
    "version": "npm run build && npm run zip && git update-index --no-assume-unchanged ./dist/chrome.zip ./dist/firefox.zip ./dist/safari.zip ./dist/website.zip && git add --force ./dist/*.zip",
    "postversion": "git update-index --assume-unchanged ./dist/chrome.zip ./dist/firefox.zip ./dist/safari.zip ./dist/website.zip",
    "xcode": "xcrun safari-web-extension-converter ./dist/safari --project-location xcode --app-name brume-wallet",
    "clean": "rimraf ./node_modules ./.next ./out ./dist ./website ./chrome ./firefox ./safari ./package-lock.json",
    "lint": "next lint",
    "start": "serve ./dist/website"
  },
  "dependencies": {
    "@hazae41/arrays": "^1.1.2",
    "@hazae41/berith": "^1.1.40",
    "@hazae41/binary": "^1.2.34",
    "@hazae41/bytes": "^1.1.21",
    "@hazae41/cadenas": "^0.2.34",
    "@hazae41/cascade": "^1.1.26",
    "@hazae41/cleaner": "^1.0.4",
    "@hazae41/cursor": "^1.1.19",
    "@hazae41/echalote": "^0.2.56",
    "@hazae41/ed25519": "^2.0.4",
    "@hazae41/fleche": "^1.1.43",
    "@hazae41/future": "^1.0.3",
    "@hazae41/morax": "^1.0.20",
    "@hazae41/mutex": "^1.2.9",
    "@hazae41/option": "^1.0.17",
    "@hazae41/piscine": "^1.0.40",
    "@hazae41/plume": "^2.1.3",
    "@hazae41/result": "^1.0.52",
    "@hazae41/sha1": "^1.0.2",
    "@hazae41/x25519": "^2.0.2",
    "@hazae41/xswr": "^2.0.0-88",
    "@heroicons/react": "^2.0.18",
    "@noble/curves": "^1.1.0",
    "@noble/hashes": "^1.3.1",
    "@scure/base": "^1.1.1",
    "@scure/bip32": "^1.3.1",
    "@scure/bip39": "^1.2.1",
    "ethers": "^6.6.4",
    "next": "13.4.11",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "react-popper": "^2.3.0",
    "workbox-precaching": "^7.0.0"
  },
  "devDependencies": {
    "@types/chrome": "^0.0.241",
    "@types/node": "20.4.2",
    "@types/react": "18.2.15",
    "@types/react-dom": "18.2.7",
    "@types/w3c-web-usb": "^1.0.6",
    "autoprefixer": "^10.4.14",
    "eslint": "8.45.0",
    "eslint-config-next": "13.4.11",
    "ipfs-http-client": "^60.0.1",
    "postcss": "^8.4.27",
    "rimraf": "^5.0.1",
    "serve": "^14.2.0",
    "tailwindcss": "^3.3.3",
    "typescript": "5.1.6",
    "webpack": "^5.88.2",
    "workbox-build": "^7.0.0"
  }
}
