{
  "name": "@brume/wallet",
  "version": "0.3.4",
  "private": true,
  "scripts": {
    "dev:website": "next dev",
    "dev:extension": "npm-watch build",
    "build": "npm run build:!before && npm run build:!website && npm run build:!chrome && npm run build:!safari && npm run build:!firefox && npm run build:!after",
    "build:!before": "rimraf ./dist && next build && mv ./out/_next ./out/next && node ./scripts/postbuild.mjs && mkdir ./dist",
    "build:!website": "mkdir ./dist/website && cp -R ./out/* ./dist/website && cd ./dist/website && rimraf ./firefox ./chrome ./safari",
    "build:!chrome": "mkdir ./dist/chrome && cp -R ./out/* ./dist/chrome && cd ./dist/chrome && mv ./chrome/* . && rimraf ./firefox ./chrome ./safari",
    "build:!firefox": "mkdir ./dist/firefox && cp -R ./out/* ./dist/firefox && cd ./dist/firefox && mv ./firefox/* . && rimraf ./firefox ./chrome ./safari",
    "build:!safari": "mkdir ./dist/safari && cp -R ./out/* ./dist/safari && cd ./dist/safari && mv ./safari/* . && rimraf ./firefox ./chrome ./safari",
    "build:!after": "node ./scripts/postbuild2.mjs && rimraf ./out",
    "zip": "npm run zip:website && npm run zip:chrome && npm run zip:firefox && npm run zip:safari",
    "zip:website": "zip -r ./dist/website.zip ./dist/website",
    "zip:chrome": "zip -r ./dist/chrome.zip ./dist/chrome",
    "zip:firefox": "zip -r ./dist/firefox.zip ./dist/firefox",
    "zip:safari": "zip -r ./dist/safari.zip ./dist/safari",
    "xcode": "xcrun safari-web-extension-converter ./dist/safari --project-location xcode --app-name brume-wallet",
    "clean": "rimraf ./node_modules ./.next ./out ./dist ./website ./chrome ./firefox ./safari ./package-lock.json",
    "lint": "next lint",
    "start": "serve ./dist/website",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build"
  },
  "dependencies": {
    "@hazae41/berith": "^1.1.40",
    "@hazae41/binary": "^1.2.34",
    "@hazae41/bytes": "^1.1.21",
    "@hazae41/cadenas": "^0.2.32",
    "@hazae41/cascade": "^1.1.26",
    "@hazae41/cleaner": "^1.0.4",
    "@hazae41/cursor": "^1.1.19",
    "@hazae41/echalote": "^0.2.50",
    "@hazae41/ed25519": "^1.0.0",
    "@hazae41/fleche": "^1.1.40",
    "@hazae41/future": "^1.0.3",
    "@hazae41/morax": "^1.0.20",
    "@hazae41/mutex": "^1.2.9",
    "@hazae41/option": "^1.0.15",
    "@hazae41/piscine": "^1.0.38",
    "@hazae41/plume": "^2.0.11",
    "@hazae41/result": "^1.0.48",
    "@hazae41/sha1": "^1.0.2",
    "@hazae41/x25519": "^1.0.0",
    "@hazae41/xswr": "^2.0.0-61",
    "@heroicons/react": "^2.0.18",
    "@noble/curves": "^1.1.0",
    "@noble/hashes": "^1.3.1",
    "@scure/base": "^1.1.1",
    "ethers": "^6.6.0",
    "next": "13.4.6",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "react-popper": "^2.3.0",
    "workbox-precaching": "^7.0.0"
  },
  "devDependencies": {
    "@storybook/addon-essentials": "^7.0.22",
    "@storybook/addon-interactions": "^7.0.22",
    "@storybook/addon-links": "^7.0.22",
    "@storybook/blocks": "^7.0.22",
    "@storybook/nextjs": "^7.0.22",
    "@storybook/react": "^7.0.22",
    "@storybook/testing-library": "^0.0.14-next.2",
    "@types/chrome": "^0.0.237",
    "@types/node": "20.3.1",
    "@types/react": "18.2.12",
    "@types/react-dom": "18.2.5",
    "autoprefixer": "^10.4.14",
    "eslint": "8.43.0",
    "eslint-config-next": "13.4.6",
    "ipfs-http-client": "^60.0.1",
    "npm-watch": "^0.11.0",
    "postcss": "^8.4.24",
    "rimraf": "^5.0.1",
    "serve": "^14.2.0",
    "storybook": "^7.0.22",
    "tailwindcss": "^3.3.2",
    "typescript": "5.1.3",
    "webpack": "^5.87.0",
    "webpack-cli": "^5.1.4",
    "workbox-build": "^7.0.0"
  },
  "watch": {
    "build": {
      "patterns": [
        "pages",
        "public",
        "src"
      ],
      "extensions": "*"
    }
  }
}
