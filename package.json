{
  "name": "@brume/wallet",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "dev:extension": "npm-watch build",
    "build:extension": "npm run build:next && npm run build:chrome && npm run build:safari",
    "build:next": "next build && next export && mv out/_next out/next && node build.js",
    "build:chrome": "rimraf chrome && cp -R out chrome && mv chrome/chrome/* chrome && rimraf chrome/chrome chrome/safari",
    "build:safari": "rimraf safari && cp -R out safari && mv safari/safari/* safari && rm -rf safari/chrome safari/safari",
    "xcode": "xcrun safari-web-extension-converter ./safari --project-location xcode --app-name brume-wallet",
    "clean": "rimraf node_modules .next out chrome safari package-lock.json",
    "lint": "next lint"
  },
  "dependencies": {
    "@hazae41/berith": "^1.1.40",
    "@hazae41/binary": "^1.2.10",
    "@hazae41/bytes": "^1.0.4",
    "@hazae41/echalote": "^0.2.31",
    "@hazae41/ed25519": "^1.0.0",
    "@hazae41/fleche": "^1.1.16",
    "@hazae41/morax": "^1.0.20",
    "@hazae41/piscine": "^1.0.2",
    "@hazae41/sha1": "^1.0.0",
    "@hazae41/x25519": "^1.0.0",
    "@hazae41/xswr": "^1.5.1-9",
    "@heroicons/react": "^2.0.16",
    "@noble/curves": "^1.0.0",
    "@noble/hashes": "^1.3.0",
    "@scure/base": "^1.1.1",
    "ethers": "^6.2.2",
    "next": "13.2.4",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "react-popper": "^2.3.0"
  },
  "devDependencies": {
    "@types/chrome": "^0.0.225",
    "@types/node": "18.15.10",
    "@types/react": "18.0.29",
    "@types/react-dom": "18.0.11",
    "autoprefixer": "^10.4.14",
    "eslint": "8.36.0",
    "eslint-config-next": "13.2.4",
    "npm-watch": "^0.11.0",
    "postcss": "^8.4.21",
    "rimraf": "^4.4.1",
    "tailwindcss": "^3.2.7",
    "typescript": "5.0.2"
  },
  "watch": {
    "build": {
      "patterns": [
        "pages",
        "public",
        "src"
      ],
      "extensions": "*"
    }
  }
}
