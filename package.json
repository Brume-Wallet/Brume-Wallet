{
  "name": "@brume/wallet",
  "version": "0.3.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "dev:extension": "npm-watch build:extension",
    "build": "next build && mv ./out/_next ./out/next && node ./scripts/postbuild.mjs",
    "build:extension": "npm run build && npm run build:extension:chrome && npm run build:extension:safari && npm run build:extension:firefox && node ./scripts/postbuild2.mjs",
    "build:extension:chrome": "rimraf ./chrome && cp -R ./out ./chrome && cd ./chrome && mv ./chrome/* . && rimraf ./firefox ./chrome ./safari",
    "build:extension:firefox": "rimraf ./firefox && cp -R ./out ./firefox && cd ./firefox && mv ./firefox/* . && rimraf ./firefox ./chrome ./safari",
    "build:extension:safari": "rimraf ./safari && cp -R ./out ./safari && cd ./safari && mv ./safari/* . && rimraf ./firefox ./chrome ./safari",
    "install:xcode": "xcrun safari-web-extension-converter ./safari --project-location xcode --app-name brume-wallet",
    "clean": "rimraf ./node_modules ./.next ./out ./chrome ./safari ./package-lock.json",
    "lint": "next lint",
    "start": "serve out"
  },
  "dependencies": {
    "@hazae41/berith": "^1.1.40",
    "@hazae41/binary": "^1.2.34",
    "@hazae41/bytes": "^1.1.21",
    "@hazae41/cadenas": "^0.2.32",
    "@hazae41/cascade": "^1.1.26",
    "@hazae41/cleaner": "^1.0.4",
    "@hazae41/cursor": "^1.1.19",
    "@hazae41/echalote": "^0.2.50",
    "@hazae41/ed25519": "^1.0.0",
    "@hazae41/fleche": "^1.1.40",
    "@hazae41/future": "^1.0.3",
    "@hazae41/morax": "^1.0.20",
    "@hazae41/mutex": "^1.2.9",
    "@hazae41/option": "^1.0.15",
    "@hazae41/piscine": "^1.0.37",
    "@hazae41/plume": "^2.0.11",
    "@hazae41/result": "^1.0.48",
    "@hazae41/sha1": "^1.0.2",
    "@hazae41/x25519": "^1.0.0",
    "@hazae41/xswr": "^2.0.0-56",
    "@heroicons/react": "^2.0.18",
    "@noble/curves": "^1.1.0",
    "@noble/hashes": "^1.3.1",
    "@scure/base": "^1.1.1",
    "ethers": "^6.6.0",
    "next": "13.4.6",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "react-popper": "^2.3.0",
    "workbox-precaching": "^7.0.0"
  },
  "devDependencies": {
    "@types/chrome": "^0.0.237",
    "@types/node": "20.3.1",
    "@types/react": "18.2.12",
    "@types/react-dom": "18.2.5",
    "autoprefixer": "^10.4.14",
    "eslint": "8.43.0",
    "eslint-config-next": "13.4.6",
    "ipfs-http-client": "^60.0.1",
    "npm-watch": "^0.11.0",
    "postcss": "^8.4.24",
    "rimraf": "^5.0.1",
    "serve": "^14.2.0",
    "tailwindcss": "^3.3.2",
    "typescript": "5.1.3",
    "webpack": "^5.87.0",
    "webpack-cli": "^5.1.4",
    "workbox-build": "^7.0.0"
  },
  "watch": {
    "build": {
      "patterns": [
        "pages",
        "public",
        "src"
      ],
      "extensions": "*"
    }
  }
}
