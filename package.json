{
  "name": "@brume/wallet",
  "version": "0.2.5",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "dev:extension": "npm-watch build:extension",
    "build": "next build && mv ./out/_next ./out/next && node ./scripts/rename.mjs",
    "build:extension": "npm run build && npm run build:chrome && npm run build:safari",
    "build:chrome": "rimraf ./chrome && cp -R ./out ./chrome && mv ./chrome/chrome/* ./chrome && rimraf ./chrome/chrome ./chrome/safari",
    "build:safari": "rimraf ./safari && cp -R ./out ./safari && mv ./safari/safari/* ./safari && rm -rf ./safari/chrome ./safari/safari",
    "xcode": "xcrun safari-web-extension-converter ./safari --project-location xcode --app-name brume-wallet",
    "clean": "rimraf ./node_modules ./.next ./out ./chrome ./safari ./package-lock.json",
    "lint": "next lint"
  },
  "dependencies": {
    "@hazae41/berith": "^1.1.40",
    "@hazae41/binary": "^1.2.31",
    "@hazae41/bytes": "^1.1.14",
    "@hazae41/cursor": "^1.1.14",
    "@hazae41/echalote": "^0.2.38",
    "@hazae41/ed25519": "^1.0.0",
    "@hazae41/fleche": "^1.1.28",
    "@hazae41/morax": "^1.0.20",
    "@hazae41/mutex": "^1.2.5",
    "@hazae41/option": "^1.0.9",
    "@hazae41/piscine": "^1.0.7",
    "@hazae41/plume": "^2.0.6",
    "@hazae41/result": "^1.0.34",
    "@hazae41/sha1": "^1.0.0",
    "@hazae41/x25519": "^1.0.0",
    "@hazae41/xswr": "^1.5.15",
    "@heroicons/react": "^2.0.18",
    "@noble/curves": "^1.0.0",
    "@noble/hashes": "^1.3.0",
    "@scure/base": "^1.1.1",
    "ethers": "^6.4.0",
    "next": "13.4.4",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "react-popper": "^2.3.0"
  },
  "devDependencies": {
    "@types/chrome": "^0.0.237",
    "@types/node": "20.2.5",
    "@types/react": "18.2.7",
    "@types/react-dom": "18.2.4",
    "autoprefixer": "^10.4.14",
    "eslint": "8.41.0",
    "eslint-config-next": "13.4.4",
    "ipfs-http-client": "^60.0.1",
    "npm-watch": "^0.11.0",
    "postcss": "^8.4.24",
    "rimraf": "^5.0.1",
    "tailwindcss": "^3.3.2",
    "typescript": "5.0.4"
  },
  "watch": {
    "build": {
      "patterns": [
        "pages",
        "public",
        "src"
      ],
      "extensions": "*"
    }
  }
}
