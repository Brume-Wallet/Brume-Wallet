{
  "name": "@brumewallet/wallet",
  "version": "0.5.16",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "macro": "saumon build -r ./src ./pages",
    "watch": "npm-watch",
    "build": "npm run build:!before && npm run build:!website && npm run build:!android && npm run build:!apple && npm run build:!chrome && npm run build:!safari && npm run build:!firefox && npm run build:!after",
    "build:!before": "next build && mv ./out/_next ./out/next && node ./scripts/postbuild.mjs && rimraf ./dist && mkdir ./dist",
    "build:!website": "mkdir ./dist/website && cp -R ./out/* ./dist/website && cd ./dist/website && rimraf ./firefox ./chrome ./safari",
    "build:!android": "mkdir ./dist/android && cp -R ./out/* ./dist/android && cd ./dist/android && rimraf ./firefox ./chrome ./safari",
    "build:!apple": "mkdir ./dist/apple && cp -R ./out/* ./dist/apple && cd ./dist/apple && rimraf ./firefox ./chrome ./safari",
    "build:!chrome": "mkdir ./dist/chrome && cp -R ./out/* ./dist/chrome && cd ./dist/chrome && mv ./chrome/* . && rimraf ./firefox ./chrome ./safari",
    "build:!firefox": "mkdir ./dist/firefox && cp -R ./out/* ./dist/firefox && cd ./dist/firefox && mv ./firefox/* . && rimraf ./firefox ./chrome ./safari",
    "build:!safari": "mkdir ./dist/safari && cp -R ./out/* ./dist/safari && cd ./dist/safari && mv ./safari/* . && rimraf ./firefox ./chrome ./safari",
    "build:!after": "node ./scripts/postbuild2.mjs && rimraf ./out",
    "build:website": "npm run build:!before && npm run build:!website && npm run build:!after",
    "build:vercel": "npm run build:website && cp -R ./dist/website ./out",
    "zip": "npm run zip:!website && npm run zip:!chrome && npm run zip:!firefox && npm run zip:!macos",
    "zip:!website": "cd ./dist/website && zip -r -X ../website.zip .",
    "zip:!chrome": "cd ./dist/chrome && zip -r -X ../chrome.zip .",
    "zip:!firefox": "cd ./dist/firefox && zip -r -X ../firefox.zip .",
    "zip:!macos": "cd './dist/Brume Wallet.app' && zip -r -X ../macos.zip .",
    "preversion": "find . -name '.DS_Store' -delete && echo $npm_package_version > ./version.txt",
    "version:!android": "cp ./apps/android/app/release/app-release.apk ./dist/android.apk",
    "version:!ios-and-ipados": "cp './dist/ios/Brume Wallet.ipa' ./dist/ios-and-ipados.ipa",
    "version:!gitadd1": "git update-index --no-assume-unchanged ./dist/chrome.zip ./dist/firefox.zip ./dist/website.zip ./dist/android.apk ./dist/ios-and-ipados.ipa ./dist/macos.zip ./dist/.ipfs.md ./dist/.website.ipfs.md",
    "version:!gitadd2": "git add --force ./dist/chrome.zip ./dist/firefox.zip ./dist/website.zip ./dist/android.apk ./dist/ios-and-ipados.ipa ./dist/macos.zip ./dist/.ipfs.md ./dist/.website.ipfs.md",
    "version:!gitadd3": "git update-index --assume-unchanged ./dist/chrome.zip ./dist/firefox.zip ./dist/website.zip ./dist/android.apk ./dist/ios-and-ipados.ipa ./dist/macos.zip ./dist/.ipfs.md ./dist/.website.ipfs.md",
    "version:!gitadd": "git add . && npm run version:!gitadd1 && npm run version:!gitadd2 && npm run version:!gitadd3",
    "version": "npm run build && npm run sync && node ./scripts/postversion.mjs && read && npm run zip && npm run version:!android && npm run version:!ios-and-ipados && node ./scripts/postversion2.mjs && npm run version:!gitadd",
    "clean": "rimraf ./node_modules ./.next ./out ./dist ./website ./chrome ./firefox ./safari ./package-lock.json",
    "sync": "PLATFORM=android npx cap sync && PLATFORM=apple npx cap sync",
    "lint": "next lint",
    "start": "serve ./dist/website"
  },
  "dependencies": {
    "@bufbuild/protobuf": "^1.9.0",
    "@capacitor/android": "^6.0.0",
    "@capacitor/core": "^6.0.0",
    "@capacitor/ios": "^6.0.0",
    "@hazae41/alocer": "^1.0.9",
    "@hazae41/apdu": "^1.0.0",
    "@hazae41/arrays": "^1.1.5",
    "@hazae41/asn1": "^1.3.28",
    "@hazae41/base16": "^1.0.17",
    "@hazae41/base58": "^1.0.5",
    "@hazae41/base64": "^1.0.10",
    "@hazae41/base64url": "^1.0.8",
    "@hazae41/berith": "^1.2.6",
    "@hazae41/binary": "^1.3.4",
    "@hazae41/box": "^1.0.14",
    "@hazae41/bytes": "^1.2.9",
    "@hazae41/cadenas": "^0.4.0",
    "@hazae41/chacha20poly1305": "^1.0.7",
    "@hazae41/cubane": "^0.1.16",
    "@hazae41/cursor": "^1.2.3",
    "@hazae41/disposer": "^2.0.11",
    "@hazae41/echalote": "^0.4.4",
    "@hazae41/ed25519": "^2.1.10",
    "@hazae41/eligos": "^1.0.6",
    "@hazae41/fleche": "^1.4.4",
    "@hazae41/future": "^1.0.3",
    "@hazae41/glacier": "^2.0.13",
    "@hazae41/jsonrpc": "^1.0.5",
    "@hazae41/kcp": "^1.1.2",
    "@hazae41/keccak256": "^1.0.8",
    "@hazae41/ledger": "^0.1.0",
    "@hazae41/morax": "^1.1.5",
    "@hazae41/mutex": "^2.0.0",
    "@hazae41/network-bundle": "^1.2.1",
    "@hazae41/option": "^1.0.27",
    "@hazae41/piscine": "^1.2.12",
    "@hazae41/plume": "^2.4.2",
    "@hazae41/result": "^1.2.0",
    "@hazae41/ripemd160": "^1.0.2",
    "@hazae41/secp256k1": "^0.0.5",
    "@hazae41/sha1": "^1.1.12",
    "@hazae41/signals": "^1.0.1",
    "@hazae41/smux": "^1.1.1",
    "@hazae41/symbol-dispose-polyfill": "^1.0.2",
    "@hazae41/x25519": "^2.1.4",
    "@hazae41/zepar": "^1.1.6",
    "@heroicons/react": "^2.1.3",
    "@nuintun/qrcode": "^3.4.0",
    "@paulmillr/qr": "^0.1.1",
    "@scure/bip32": "^1.4.0",
    "@scure/bip39": "^1.3.0",
    "ethers": "^6.12.1",
    "next": "14.2.3",
    "react": "18.3.1",
    "react-dom": "18.3.1",
    "workbox-precaching": "^7.1.0"
  },
  "devDependencies": {
    "@capacitor/cli": "^6.0.0",
    "@hazae41/phobos": "^1.0.10",
    "@hazae41/rimraf": "^1.0.1",
    "@hazae41/saumon": "^0.2.7",
    "@mdx-js/loader": "^3.0.1",
    "@next/mdx": "^14.2.3",
    "@types/chrome": "^0.0.267",
    "@types/node": "20.12.10",
    "@types/react": "18.3.1",
    "@types/react-dom": "18.3.0",
    "@types/w3c-web-usb": "^1.0.10",
    "autoprefixer": "^10.4.19",
    "blockstore-core": "^4.4.1",
    "dotenv": "^16.4.5",
    "eslint": "^8.57.0",
    "eslint-config-next": "14.2.3",
    "ipfs-unixfs-importer": "^15.2.5",
    "npm-watch": "^0.12.0",
    "postcss": "^8.4.38",
    "serve": "^14.2.3",
    "tailwindcss": "^3.4.3",
    "ts-loader": "^9.5.1",
    "tslib": "^2.6.2",
    "typescript": "5.4.5",
    "webpack": "^5.91.0",
    "workbox-build": "^7.1.0"
  },
  "watch": {
    "build": {
      "patterns": [
        "src",
        "pages"
      ],
      "extensions": "js,jsx,ts,tsx,md,mdx,css,json",
      "delay": 2500
    }
  }
}
